#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo 'ğŸ—ï¸ğŸ‘· Styling, testing and building your project before committing'

#next-lint
npm run next-lint ||
(
    echo 'Couldnt run next lint.';
    false;
)

#prettier-quick
npm run prettier-quick ||
(
    echo 'Couldnt run prettier quick.';
    false;
)

#fix lint error
npm run lint-fix ||
(
    echo 'There are some unfixable problems
            Lint fix Failed. Run npm run lint, check error, fix it and try commit again.';
    false;
)

#formats using prettier
npm run format ||
(
    echo 'Prettier Format Failed. Run npm run format, check error, fix it and try commit again.';
    false;
)

#check Prettier standards
npm run check-format ||
(
    echo 'Prettier Check Failed. Run npm run format, add changes and try commit again.';
    false;
)

#check ESLint Standards
npm run check-lint ||
(
        echo 'ESLint Check Failed. Make the required changes listed above, add changes and try to commit again.'
        false; 
)


# If everything passes... Now we can commit
# echo 'ğŸ¤”ğŸ¤”ğŸ¤”ğŸ¤”... Alright.... Code looks good to me... Trying to build now. ğŸ¤”ğŸ¤”ğŸ¤”ğŸ¤”'

# npm run build ||
